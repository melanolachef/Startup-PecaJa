<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RegisterActivity">

        <ImageView
            android:id="@+id/imgLogoCadastro"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_peca_ja"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCadastroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CADASTRO"
            android:textColor="@color/cinza_texto"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgLogoCadastro" />

        <EditText
            android:id="@+id/etNome"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_background"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCadastroTitle" />

        <EditText
            android:id="@+id/etEmailCadastro"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etNome"
            app:layout_constraintStart_toStartOf="@id/etNome"
            app:layout_constraintTop_toBottomOf="@id/etNome" />

        <EditText
            android:id="@+id/etSenhaCadastro"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etEmailCadastro"
            app:layout_constraintStart_toStartOf="@id/etEmailCadastro"
            app:layout_constraintTop_toBottomOf="@id/etEmailCadastro" />

        <EditText
            android:id="@+id/etConfirmarSenha"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etSenhaCadastro"
            app:layout_constraintStart_toStartOf="@id/etSenhaCadastro"
            app:layout_constraintTop_toBottomOf="@id/etSenhaCadastro" />

        <EditText
            android:id="@+id/etTelefone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Telefone"
            android:inputType="phone"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etConfirmarSenha"
            app:layout_constraintStart_toStartOf="@id/etConfirmarSenha"
            app:layout_constraintTop_toBottomOf="@id/etConfirmarSenha" />

        <EditText
            android:id="@+id/etDocumento"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Documento (CPF/CNPJ)"
            android:inputType="number"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etTelefone"
            app:layout_constraintStart_toStartOf="@id/etTelefone"
            app:layout_constraintTop_toBottomOf="@id/etTelefone" />

        <TextView
            android:id="@+id/tvLabelTipoPessoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"
            android:text="Tipo de Pessoa:"
            android:textColor="@color/cinza_texto"
            app:layout_constraintStart_toStartOf="@id/etDocumento"
            app:layout_constraintTop_toBottomOf="@id/etDocumento" />

        <RadioGroup
            android:id="@+id/rgTipoPessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@id/etDocumento"
            app:layout_constraintStart_toStartOf="@id/etDocumento"
            app:layout_constraintTop_toBottomOf="@id/tvLabelTipoPessoa">

            <RadioButton
                android:id="@+id/rbFisica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Física"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbJuridica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Jurídica" />
        </RadioGroup>

        <EditText
            android:id="@+id/etCep"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text_background"
            android:hint="CEP (somente números)"
            android:inputType="number"
            android:maxLength="8"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/rgTipoPessoa"
            app:layout_constraintStart_toStartOf="@id/rgTipoPessoa"
            app:layout_constraintTop_toBottomOf="@id/rgTipoPessoa" />

        <EditText
            android:id="@+id/etRua"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Rua"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etCep"
            app:layout_constraintStart_toStartOf="@id/etCep"
            app:layout_constraintTop_toBottomOf="@id/etCep" />

        <EditText
            android:id="@+id/etNumero"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Número"
            android:inputType="text"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etRua"
            app:layout_constraintStart_toStartOf="@id/etRua"
            app:layout_constraintTop_toBottomOf="@id/etRua" />

        <EditText
            android:id="@+id/etComplemento"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Complemento"
            android:inputType="text"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etNumero"
            app:layout_constraintStart_toStartOf="@id/etNumero"
            app:layout_constraintTop_toBottomOf="@id/etNumero" />

        <EditText
            android:id="@+id/etBairro"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Bairro"
            android:inputType="text"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etComplemento"
            app:layout_constraintStart_toStartOf="@id/etComplemento"
            app:layout_constraintTop_toBottomOf="@id/etComplemento" />

        <EditText
            android:id="@+id/etCidade"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Cidade"
            android:inputType="text"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etBairro"
            app:layout_constraintStart_toStartOf="@id/etBairro"
            app:layout_constraintTop_toBottomOf="@id/etBairro" />

        <EditText
            android:id="@+id/etEstado"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Estado (Ex: SP)"
            android:inputType="textCapCharacters"
            android:maxLength="2"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/etCidade"
            app:layout_constraintStart_toStartOf="@id/etCidade"
            app:layout_constraintTop_toBottomOf="@id/etCidade" />

        <Button
            android:id="@+id/btnFinalizarCadastro"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="@color/vermelho_principal"
            android:text="FINALIZAR CADASTRO"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/etEstado"
            app:layout_constraintStart_toStartOf="@id/etEstado"
            app:layout_constraintTop_toBottomOf="@id/etEstado" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>